
.userinfo {
  display: flex;
  width:100%;
  background-color: #fff;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
  margin-bottom:20rpx;
}
.list{
  margin-top: 20rpx;
  width:100%;
  background-color: #fff;
}
.item{
  height:80rpx;
  font-size:30rpx;
  line-height: 80rpx;
  margin: 0 30rpx;
  border-bottom:0.5px solid #ccc;
}
.item:last-child{
  border:none;
}