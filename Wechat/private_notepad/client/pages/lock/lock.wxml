<view class="container">
  <text id="info" class="{{showWarning === true? 'showWarning':''}}">{{title}}</text>
  <canvas canvas-id="canvas1" class="canvas1" style='width:{{canvasWidth}}px; height:{{canvasWidth}}px' bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd"></canvas>
  <canvas canvas-id="canvas2" class="canvas2" style='width:{{canvasWidth}}px; height:{{canvasWidth}}px'></canvas>
  <text class="modifiedPassword" bindtap='modifiedPassword'>忘记手势密码？</text>
</view>
