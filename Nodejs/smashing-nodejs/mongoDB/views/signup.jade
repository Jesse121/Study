extends layout
block body
    form(action="/signup",method="post")
        fieldset
            legend sign up
            p
                label first
                input(name="user[first]",type="text")
            p
                label last
                input(name="user[last]",type="text")
            p
                label email
                input(name="user[email]",type="text")
            p
                label password
                input(name="user[password]",type="password")
            p
                button submit
            p
                a(href="/") go back