/**index.wxss**/
page {
  height: 100%;
  position: relative;
  background: #F6F6F6;
}
.scroll-view{
  height: 950rpx;
}
.msg-item{
  border-radius: 10rpx;
  background-color: #fff;
  margin:0 30rpx 20rpx;
  padding:10rpx 20rpx 0;
  overflow: hidden;
}
.content{
  display: block;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom:1rpx solid #ccc;
}
.time{
  display: block;
  float: left;
  font-size: 35rpx;
  margin:20rpx 0;
}
.del,.modified{
  display: block;
  float: right;
  font-size: 30rpx;
  padding:15rpx 20rpx;
  margin:15rpx;
  color: #fff;
  border-radius:10rpx;
  background-color: red;
}
.modified{
  background-color: #179b16;
}



.add-btn{
  width:90%;
  position: absolute;
  left:50%;
  bottom:90rpx;
  transform:translate(-50%,0);
  text-align: center;
  background-color: #179B16;
  color: #fff;
  font-size: 40rpx;
  height: 110rpx;
  line-height: 110rpx;
  border-radius: 10rpx;
}